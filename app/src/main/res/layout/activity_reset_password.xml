<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restablecer Contraseña"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="15dp"
        android:layout_below="@+id/relative123"
        android:hint="Escriba su número de teléfono"
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responda las preguntas de seguridad"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/find_phone_number"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_button"
        android:padding="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/title_questions"
        android:hint="¿Donde se conocieron tus padres por primera vez?"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/secondary_button"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_1"
        android:hint="¿Cuál es tu superhéroe favorito?"
        />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_button"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_2"
        android:text="Verificar"
        android:textColor="@color/colorWhite"
        />

</RelativeLayout>